<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="booking" type="in.viato.app.model.Booking"></variable>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cover"
                android:layout_width="48dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@{booking.cover}"
                android:scaleType="fitXY"
                android:error="@{@drawable/placeholder}"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cover"
                android:layout_toLeftOf="@+id/price"
                android:textSize="16sp"
                android:text="@{booking.title}"
                />
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cover"
                android:layout_toLeftOf="@+id/price"
                android:layout_below="@+id/title"
                android:textSize="12sp"
                android:text="@{booking.sub_title}"
                />
            <TextView
                android:id="@+id/return_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cover"
                android:layout_toLeftOf="@+id/price"
                android:layout_below="@+id/sub_title"
                android:textSize="12sp"
                android:textColor="@color/primary_light"
                android:text='@{booking.return_date + ""}'
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text='@{"Rs " + booking.price}'/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_extend_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extend"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_return_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return"/>
        </LinearLayout>
    </LinearLayout>
</layout>
