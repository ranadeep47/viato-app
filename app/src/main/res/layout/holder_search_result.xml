<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/search_result_cover"
                android:scaleType="fitXY"
                android:layout_width="@dimen/book_thumb_small_width"
                android:layout_height="@dimen/book_thumb_small_height" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/search_result_title"
                    android:padding="@dimen/spacing_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/search_result_author"
                    android:padding="@dimen/spacing_small"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_v_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>