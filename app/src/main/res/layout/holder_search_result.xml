<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/search_result_cover"
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/cover_image"
            android:src="@drawable/img_header1"/>
        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_result_cover"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/search_result_cover">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="8dp">
                <TextView
                    android:id="@+id/search_result_title"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angry Birds Comics, Vol. 1: Welcome to the Flock"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/search_result_author"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Peter Flanery"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_action_wrapper">
                <ImageButton
                    android:id="@+id/btn_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add_circle_outline_black_24dp"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>