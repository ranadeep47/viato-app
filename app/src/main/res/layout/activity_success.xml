<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="in.viato.app.ui.activities.SuccessActivity">
        <RelativeLayout
            android:layout_width="@dimen/avatar_large"
            android:layout_height="@dimen/avatar_large"
            android:background="@drawable/circle"
            android:layout_gravity="center_horizontal"
            android:id="@+id/icon_success">
            <ImageView
                android:layout_width="@dimen/avatar_normal"
                android:layout_height="@dimen/avatar_normal"
                android:src="@drawable/ic_done_white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_success"
            android:text="Hurray!"
            android:gravity="center"
            android:textColor="#9ECB54"
            android:layout_marginTop="@dimen/text_small"
            android:textSize="@dimen/text_huge"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Placed"
            android:gravity="center"
            android:textSize="@dimen/text_huge"
            android:layout_marginTop="@dimen/spacing_xx_largee"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order id: 4r5544"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="@dimen/spacing_vvv_small"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated Delivery"
            android:gravity="center"
            android:textSize="@dimen/text_huge"
            android:layout_marginTop="@dimen/spacing_xx_largee"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12-Sep-15"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="@dimen/spacing_vvv_small"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_xx_largee"
            android:text="Browse More Books"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tell your friends"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
